            RowBox[{"All", ",", "2"}], "]"}], "]"}], ",", 
          RowBox[{"data", "[", 
           RowBox[{"[", 
            RowBox[{"All", ",", "2"}], "]"}], "]"}], ",", "data"}], "}"}]}]}],
       ";", 
      RowBox[{"hX", "+", "hY", "-", "hJoint"}]}]}], "]"}]}]}]}], "Input",
